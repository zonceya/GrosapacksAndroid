<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Change base theme to NoActionBar -->
    <style name="Theme.GrosaPacks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <!-- You can keep the NoActionBar theme for specific use cases -->
    <style name="Theme.GrosaPacks.NoActionBar" parent="Theme.GrosaPacks">
        <!-- Additional specific attributes if needed -->
    </style>

    <!-- Rest of your styles remain the same -->
    <style name="AppbarTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_splash_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.GrosaPacks</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.GrosaPack" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorGrosaPack</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="Theme.GrosaPacks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GrosaPacks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>