<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Title and description -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP Code"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorGrosaPack"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the security code we just sent to your email"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"/>

    <!-- OTP Input fields -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/otpInput1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_bg"
            android:textColor="@color/colorGrosaPack"
            android:cursorVisible="true"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/otpInput2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_bg"
            android:textColor="@color/colorGrosaPack"
            android:cursorVisible="false"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/otpInput3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_bg"
            android:textColor="@color/colorGrosaPack"
            android:cursorVisible="false"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/otpInput4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_bg"
            android:textColor="@color/colorGrosaPack"
            android:cursorVisible="false"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/otpInput5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_bg"
            android:textColor="@color/colorGrosaPack"
            android:cursorVisible="false"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/otpInput6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/otp_input_bg"
            android:textColor="@color/colorGrosaPack"
            android:cursorVisible="false"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Verify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonVerify"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorGrosaPack"
        app:cornerRadius="8dp" />

    <!-- Resend OTP Timer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textResendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP in "
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60s"
            android:textSize="16sp"
            android:textColor="@color/colorGrosaPack"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Resend OTP Button (initially hidden) -->
    <TextView
        android:id="@+id/textResendOtpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:textSize="16sp"
        android:textColor="@color/colorGrosaPack"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>